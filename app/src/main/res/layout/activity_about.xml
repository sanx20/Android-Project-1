<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.screens.about.AboutActivity">
    <TextView
        android:id="@+id/about_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/_8dp"
        android:text="@string/about_app"
        android:layout_marginTop="@dimen/_8dp"
        app:layout_constraintTop_toTopOf="parent"/>
    <TextView
        android:id="@+id/team_members"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/team_members"
        android:textStyle="bold"
        android:textSize="20sp"
        android:layout_marginHorizontal="@dimen/_8dp"
        app:layout_constraintTop_toBottomOf="@id/about_text"
        android:layout_marginTop="@dimen/_16dp"/>
    <TextView
        android:id="@+id/team_details"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/_8dp"
        android:layout_marginTop="@dimen/_8dp"
        android:text="@string/team_member_list"
        app:layout_constraintTop_toBottomOf="@id/team_members"/>
</androidx.constraintlayout.widget.ConstraintLayout>